%ul#gallery
  - page.images.each do |image|
    %li
      = image_tag(image.thumbnail("570x270#c").url)

= content_for :javascripts do
  = javascript_include_tag('gallery_view/jquery.timers-1.2.js')
  = javascript_include_tag('gallery_view/jquery.galleryview-2.1.1.js')
  = javascript_include_tag('enable_galleries.js')
