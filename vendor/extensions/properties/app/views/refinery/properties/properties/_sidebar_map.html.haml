- content_for :body_content_right do
  #locations_index_map

- content_for :javascripts do
  = javascript_include_tag('http://maps.google.com/maps/api/js?sensor=true')
  = javascript_include_tag('refinery/location_explorer/vendor/gmaps.js')
  = javascript_include_tag('refinery/location_explorer/locations_map')
  :javascript
    $(document).ready(function(){
      var locations_map = new Application.LocationsMap('#locations_index_map', #{Refinery::LocationExplorer.config.map_center}, {zoom:15});
      locations_map.addLocations(#{@locations.to_json(:methods => [:description_preview, :preview_image_url, :colour]).html_safe });
    });
