<%= form_for [refinery, :properties_admin, @property] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @property,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :headline -%>
    <%= f.text_field :headline, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :lot_number -%>
    <%= f.text_field :lot_number  -%>
  </div>

  <div class='field'>
    <%= f.label :total_price -%>
    <%= f.text_field :total_price  -%>
  </div>

  <div class='field'>
    <%= f.label :availability_status -%>
    <%= f.text_field :availability_status  -%>
  </div>

  <div class='field'>
    <%= f.label :land_area_sqm -%>
    <%= f.text_field :land_area_sqm  -%>
  </div>

  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:description, :potential_uses].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/properties/property", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
        <li class="ui-state-default">
          <%= link_to t("images", :scope => "activerecord.attributes.refinery/properties/property", :default => 'Images'), "#images" %>
        </li>
      </ul>
      <div id='page_part_editors'>
        <% [:description, :potential_uses].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
        <div class='page_part' id='images'>
          <%= render :partial => 'images', :locals => {:f => f} %>
        </div>
      </div>
    </div>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.properties.admin.properties.property'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @property.lot_number) %>
<% end -%>

<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
