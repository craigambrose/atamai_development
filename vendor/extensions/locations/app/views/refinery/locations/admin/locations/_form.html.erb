<%= form_for [refinery, :locations_admin, @location] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @location,
              :include_object_name => true %>


  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>

  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:description].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/locations/location", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
        <li class="ui-state-default">
          <%= link_to t("images", :scope => "activerecord.attributes.refinery/properties/property", :default => 'Images'), "#images" %>
        </li>
      </ul>
      <div id='page_part_editors'>
        <% [:description].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
      <div class='page_part' id='images'>
        <%= render '/refinery/admin/pages/tabs/images', :f => f %>
      </div>
    </div>

  </div>

  <div class='field'>
    <%= f.label :latitude -%>
    <%= f.text_field :latitude  -%>

  </div>

  <div class='field'>
    <%= f.label :longitude -%>
    <%= f.text_field :longitude  -%>

  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.locations.admin.locations.location'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @location.name) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
